@using bygnuWebApp.Models
@model AspNetUsers

@{
    ViewBag.Title = "Edit Profile";
}

<div class="container manage">
    <div class="row">
        <div class="col-lg-12">

            @Html.Partial("_ProfileNavigationPartial")

            <div class="col-lg-12">
                <h1 class="page-title manage__title">Edit Profile</h1>
            </div>

            <div class="col-lg-12 manage__information">
                @using (Html.BeginForm("EditProfile", "Manage", new {}, FormMethod.Post, new { @class = "form manage__item", role = "form" }))
                {

                    @Html.AntiForgeryToken()

                    <fieldset class="form__group">

                        @Html.LabelFor(m => m.FirstName, new { @class = "form__label form__label--strong" })
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form__field form__field--default" })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "form__validation form__validation--default" })

                        @Html.LabelFor(m => m.LastName, new { @class = "form__label form__label--strong" })
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form__field form__field--default" })
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "form__validation form__validation--default" })

                    </fieldset>

                    <fieldset class="form__group">

                        @Html.LabelFor(m => m.Email, new { @class = "form__label form__label--strong" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form__field form__field--default", @type = "email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "form__validation form__validation--default" })

                        @Html.LabelFor(m => m.PhoneNumber, new { @class = "form__label form__label--strong" })
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form__field form__field--default" })
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "form__validation form__validation--default" })

                    </fieldset>
                    @Html.LabelFor(m => m.CompanyName, new { @class = "form__label form__label--strong" })
                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form__field form__field--default" })
                    @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "form__validation form__validation--default" })

                    <input type="submit" class="btn btn-default" value="Complete" />

                    }
            </div>
        </div>
    </div>
</div>