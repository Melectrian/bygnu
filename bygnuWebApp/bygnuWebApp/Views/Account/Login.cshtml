@model bygnuWebApp.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="container manage">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-title manage__title">Login</h1>
        </div>
        <div class="col-lg-12">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form manage__item", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <fieldset class="form__group">
                    @Html.LabelFor(m => m.UserName, new { @class = "form__label form__label--strong" })
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form__field form__field--default" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "form__validation form__validation--default" })

                    @Html.LabelFor(m => m.Password, new { @class = "form__label form__label--strong" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form__field form__field--default" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "form__validation form__validation--default" })

                    @Html.LabelFor(m => m.RememberMe, new { @class = "form__label form__label--weak" })
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form__field form__field--checkbox" })
                    <input type="submit" value="Log in" class="form__field form__field--submit btn" />
                </fieldset>


                @Html.ActionLink("Register as a new user", "Register", new { }, new { @class = "link" })
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}