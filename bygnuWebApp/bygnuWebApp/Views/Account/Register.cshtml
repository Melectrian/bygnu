@model bygnuWebApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container manage">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-title manage__title">Register</h1>
        </div>
        <div class="col-lg-12">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form manage__item", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <fieldset class="form__group">
                    @Html.LabelFor(m => m.UserName, new { @class = "form__label form__label--strong" })
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form__field form__field--default"})
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "form__validation form__validation--default" })

                    @Html.LabelFor(m => m.Email, new { @class = "form__label form__label--strong" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form__field form__field--default", @type = "email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "form__validation form__validation--default" })

                    @Html.LabelFor(m => m.Password, new { @class = "form__label form__label--strong" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form__field form__field--default" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "form__validation form__validation--default" })

                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form__label form__label--strong" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form__field form__field--default" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "form__validation form__validation--default" })

                    <input type="submit" class="form__field form__field--submit btn" value="Register" />
                </fieldset>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
